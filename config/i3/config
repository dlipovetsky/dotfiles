# Pair PL_BBFIT and switch to HFP/HSP profile
bindsym $mod+h exec --no-startup-id "bluetoothctl connect E4:22:A5:96:17:6C && pactl set-card-profile bluez_card.E4_22_A5_96_17_6C headset_head_unit"
