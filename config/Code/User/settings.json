    "yaml.schemaStore.enable": false,
    "yaml.validate": false,
    "zenMode.centerLayout": false,
    "zenMode.hideLineNumbers": false,
    "terminal.integrated.scrollback": 2000,
    "git-graph.commitDetailsView.location": "Docked to Bottom",
}