{
    "breadcrumbs.enabled": true,
    "editor.renderControlCharacters": true,
    "editor.mouseWheelScrollSensitivity": 1.8,
    "editor.minimap.enabled": true,
    "editor.renderWhitespace": "all",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.autoSave": "off",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    "git.confirmSync": false,
    "git.autofetch": true,
    "python.pythonPath": "python2",
    "search.exclude": {
        "**/.git": true,
        "**/node_modules": true,
        "**/bower_components": true
    },
    "telemetry.enableCrashReporter": false,
    "terminal.integrated.shell.osx": "/usr/local/bin/bash",
    "telemetry.enableTelemetry": false,
    "workbench.editor.enablePreview": true,
    "workbench.colorTheme": "Visual Studio Light",

    // ansible extension
    "files.associations": {
        "**/*.yml": "ansible"
    },
    // end ansible extension

    // extension settings
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true,
        "suppressUpdateNotice": false,
        "suppressWelcomeNotice": true
    },
    "gitlens.keymap": "alternate",
    "gitlens.advanced.telemetry.enabled": false,
    "gitlens.views.fileHistory.enabled": true,
    "gitlens.views.lineHistory.enabled": true,
    "gitlens.codeLens.recentChange.enabled": false,
    // go settings
    "go.buildOnSave": "off",
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "--fast"
    ],
    "go.autocompleteUnimportedPackages": true,
    "go.installDependenciesWhenBuilding": false,

    // the below follows https://github.com/golang/tools/blob/master/gopls/doc/vscode.md
    "go.useLanguageServer": true,
    "[go]": {
        "editor.snippetSuggestions": "none",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
        "editor.codeActionsOnSaveTimeout": 3000, // allow more time for import organization
    },
    "gopls": {
        "usePlaceholders": true, // add parameter placeholders when completing a function

        // Experimental settings
        "completeUnimported": true, // autocomplete unimported packages
        "watchFileChanges": true,  // watch file changes outside of the editor
        "deepCompletion": true,     // enable deep completion
    },
    "files.eol": "\n", // formatting only supports LF line endings
    "go.languageServerExperimentalFeatures": {
        "format": true,
        "autoComplete": true,
        "rename": true,
        "goToDefinition": true,
        "hover": true,
        "signatureHelp": true,
        "goToTypeDefinition": true,
        "goToImplementation": true,
        "documentSymbols": true,
        "workspaceSymbols": true,
        "findReferences": true,
        "diagnostics": true,
        "documentLink": false,
    },
    // end go settings

    "rewrap.wrappingColumn": 80,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "plantuml.render": "PlantUMLServer",
    "plantuml.server": "http://localhost:9080",
    "markdown.extension.toc.levels": "2..6",
    "vim.useCtrlKeys": true,
    "vim.handleKeys": {
        "<C-f>": false,
        "<C-k>": false,
        "<C-w>": false,
        "<C-s>": false,
        "<C-t>": false,
        "<C-n>": false,
        "<C-pageup>": false,
        "<C-pagedown>": false,
    },
    "search.showLineNumbers": true,
    "terraform.indexing": {
        "enabled": false,
        "liveIndexing": false,
        "delay": 500,
        "exclude": [
            ".terraform/**/*",
            "**/.terraform/**/*"
        ]
    },
    "go.formatTool": "goimports",
    "files.exclude": {
        "**/.history": true
    },
    "markdown.extension.showExplorer": true,
    "explorer.autoReveal": false,
    "window.zoomLevel": 2,
    "editor.fontSize": 12,
    "debug.console.fontSize": 12,
    "markdown.preview.fontSize": 12,
    "terminal.integrated.fontSize": 12,
    "vim.easymotion": true,
    "vim.easymotionMarkerFontFamily": "'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "vim.easymotionMarkerFontWeight": "bold",
    "files.watcherExclude": {
        "**/.history/**": true
    },
    "todo-tree.filtering.useBuiltInExcludes": true,
    "workbench.editor.showTabs": true,
    "git.untrackedChanges": "separate",
    "search.location": "sidebar"
}