{
    "breadcrumbs.enabled": true,
    "editor.renderControlCharacters": true,
    "editor.mouseWheelScrollSensitivity": 1.8,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "all",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.autoSave": "off",
    "git.confirmSync": false,
    "git.autofetch": true,
    "search.exclude": {
        "**/.git": true,
        "**/node_modules": true,
        "**/bower_components": true
    },
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "workbench.editor.enablePreview": true,
    // For association values see https://code.visualstudio.com/docs/languages/identifiers
    "files.associations": {
        "**/i3/config": "i3",
        "*.dockerfile": "dockerfile",
        "Dockerfile.*": "dockerfile"
    },

    // extension settings
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true,
        "suppressUpdateNotice": false,
        "suppressWelcomeNotice": true
    },
    "gitlens.keymap": "alternate",
    "gitlens.views.lineHistory.enabled": true,
    "gitlens.codeLens.recentChange.enabled": false,

    // go settings
    "go.buildOnSave": "off",
    "go.lintTool": "golangci-lint",
    // "go.lintFlags": [
    //     "--fast"
    // ],
    "go.autocompleteUnimportedPackages": true,
    "go.installDependenciesWhenBuilding": false,
    // the below follows https://github.com/golang/tools/blob/master/gopls/doc/vscode.md
    "go.useLanguageServer": true,
    "[go]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
        // Optional: Disable snippets, as they conflict with completion ranking.
        "editor.snippetSuggestions": "none",
    },
    "gopls": {
        "build.experimentalPackageCacheKey": true,
        "build.experimentalWorkspaceModule": true,
        // Add parameter placeholders when completing a function.
        "usePlaceholders": true,
        // If true, enable additional analyses with staticcheck.
        // Warning: This will significantly increase memory usage.
        "staticcheck": true,
    },
    // formatting only supports LF line endings
    "files.eol": "\n",
    // end go settings
    "rewrap.wrappingColumn": 80,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "plantuml.render": "PlantUMLServer",
    "plantuml.server": "http://localhost:9080",
    "markdown.extension.toc.levels": "2..6",
    "markdown.extension.toc.githubCompatibility": true,
    "vim.overrideCopy": true,
    "vim.hlsearch": false,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.normalModeKeyBindings": [
        {
            "before": ["U"],
            "after": ["<C-r>"],
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "p",
            ],
            "after": [
                "p",
                "g",
                "v",
                "y"
            ]
        },
        {
            "before": [
                "P",
            ],
            "after": [
                "P",
                "g",
                "v",
                "y"
            ]
        }
    ],
    "vim.useCtrlKeys": false,
    "vim.handleKeys": {
        "<C-v>": true,
    },
    "search.showLineNumbers": true,
    "terraform.indexing": {
        "enabled": false,
        "liveIndexing": false,
        "delay": 500,
        "exclude": [
            ".terraform/**/*",
            "**/.terraform/**/*"
        ]
    },
    "go.formatTool": "goimports",
    "files.exclude": {
        "**/.history": true
    },
    "markdown.extension.showExplorer": true,
    "explorer.autoReveal": false,
    "window.zoomLevel": 2,
    "editor.fontSize": 12,
    "debug.console.fontSize": 12,
    "terminal.integrated.fontSize": 12,
    "vim.easymotion": true,
    "vim.easymotionMarkerFontWeight": "regular",
    "vim.easymotionMarkerForegroundColorOneChar": "red",
    "vim.easymotionMarkerBackgroundColor": "white",
    "vim.easymotionMarkerForegroundColorTwoCharFirst": "red",
    "files.watcherExclude": {
        "**/.history/**": true
    },
    "todo-tree.filtering.useBuiltInExcludes": "file excludes",
    "workbench.editor.showTabs": true,
    "git.untrackedChanges": "separate",
    "vim.leader": "<space>",
    "todo-tree.tree.showScanModeButton": false,
    "search.enableSearchEditorPreview": true,
    "vim.sneak": true,
    "editor.columnSelection": false,
    "markdown-toc.depthFrom": 2,
    "cSpell.userWords": [
        "Distro",
        "centos",
        "clusterctl",
        "containerd",
        "etcd",
        "konvoy",
        "kubeadm",
        "kubernetes",
        "toolchain",
        "xenial"
    ],
    "shebang.associations": [

        {
            "pattern": "^#!.*bash$",
            "language": "shellscript"
        }
    ],
    "markdown.extension.orderedList.autoRenumber": false,
    "markdownlint.run": "onSave",
    "markdownlint.config": {
        "MD004": { "style": "dash" },
        "MD007": { "indent": 4 },
        // "MD030": {
        //     "ol_single": 2,
        //     "ol_multi": 2,
        //     "ul_single": 2,
        //     "ul_multi": 2,
        // },
    },
    "gitlens.views.repositories.files.layout": "list",
    "editor.lineHeight": 20,
    "git.alwaysSignOff": true,
    "workbench.colorTheme": "Default High Contrast",
    "workbench.panel.defaultLocation": "right",
    "markdown.preview.breaks": true,
    "markdown.preview.openMarkdownLinks": "inEditor",

    "markdown.preview.fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', system-ui, 'Ubuntu', 'Droid Sans', sans-serif",
    "markdown.preview.fontSize": 15,

    "zenMode.centerLayout": false,
    "extensions.ignoreRecommendations": false,
    "go.testEnvVars": {
        "GINKGO_LIST": "true",
    },
    "quickNotes.fileName": "./.vscode/notes.md",
    "zenMode.hideLineNumbers": false,
    "workbench.sideBar.location": "left",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "git.allowForcePush": true,
    "githubPullRequests.remotes": [
        "mesosphere"
    ],
    "editor.codeActionsOnSave": null,
}